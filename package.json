{
	"id":"com.moimz.imodule.publication",
	"icon":"xi-pen-point",
	"title":{
		"ko":"출판물 관리"
	},
	"version":"1.0.0",
	"description":{
		"ko":"출판물(논문/특허 등)을 통합관리 할 수 있습니다."
	},
	"author":{
		"name":"Arzz",
		"email":"arzz@arzz.com"
	},
	"homepage":"http://www.coursemos.kr",
	"versionChecker":null,
	"dependencies":{
		"core":"3.0.0",
		"attachment":"3.0.0",
		"member":"3.0.0"
	},
	"language":"ko",
	"admin":true,
	"context":true,
	"global":false,
	"article":false,
	"widget":true,
	"templet":true,
	"configs":{
		"templet":{
			"type":"templet",
			"default":"default"
		}
	},
	"targets":{
		"member":{
			"afterGetContext":[
				"profile"
			]
		}
	},
	"databases":{
		"publication_attachment_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11
				},
				"aidx":{
					"type":"int",
					"length":11
				}
			},
			"indexes":{
				"idx":"primary_key"
			}
		},
		"publication_article_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11
				},
				"category":{
					"type":"int",
					"length":11
				},
				"title":{
					"type":"varchar",
					"length":255
				},
				"publisher":{
					"type":"int",
					"length":11
				},
				"year":{
					"type":"int",
					"length":11
				},
				"volume_no":{
					"type":"int",
					"length":11
				},
				"issue_no":{
					"type":"int",
					"length":11
				},
				"page_no":{
					"type":"varchar",
					"length":20
				},
				"abstract":{
					"type":"text"
				},
				"keyword":{
					"type":"varchar",
					"length":255
				},
				"link":{
					"type":"varchar",
					"length":255
				}
			},
			"indexes":{
				"idx":"primary_key"
			},
			"auto_increment":"idx"
		},
		"publication_author_table":{
			"columns":{
				"aidx":{
					"type":"int",
					"length":11
				},
				"midx":{
					"type":"int",
					"length":11
				},
				"name":{
					"type":"varchar",
					"length":50
				},
				"sort":{
					"type":"int",
					"length":11,
					"default":0
				}
			},
			"indexes":{
				"aidx,midx,name":"primary_key",
				"aidx":"index",
				"midx":"index"
			}
		},
		"publication_category_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11
				},
				"type":{
					"type":"enum",
					"length":"'PAPER','THESIS','PATENT','BOOK','CONFERENCE','MEDIA'",
					"default":"PAPER",
					"comment":"출판물 종류"
				},
				"title":{
					"type":"varchar",
					"length":100
				},
				"sort":{
					"type":"int",
					"length":11
				}
			},
			"indexes":{
				"idx":"primary_key"
			},
			"auto_increment":"idx"
		},
		"publication_publisher_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11
				},
				"type":{
					"type":"enum",
					"length":"'PAPER','PATENT','BOOK','CONFERENCE','MEDIA'",
					"default":"PAPER",
					"comment":"출판물 종류"
				},
				"title":{
					"type":"varchar",
					"length":100
				},
				"search":{
					"type":"varchar",
					"length":100
				},
				"isbn":{
					"type":"varchar",
					"length":20,
					"default":""
				},
				"link":{
					"type":"varchar",
					"length":255
				}
			},
			"indexes":{
				"idx":"primary_key",
				"type":"index",
				"search":"index"
			},
			"auto_increment":"idx"
		}
	}
}