{
	"id":"com.moimz.imodule.publication",
	"icon":"xi-pen-point",
	"title":{
		"ko":"출판물 관리"
	},
	"version":"1.0.0",
	"description":{
		"ko":"출판물(논문/특허 등)을 통합관리 할 수 있습니다."
	},
	"author":{
		"name":"Arzz",
		"email":"arzz@arzz.com"
	},
	"homepage":"https://www.imodules.io",
	"versionChecker":"https://api.moimz.com/download/latest",
	"dependencies":{
		"core":"3.0.0"
	},
	"language":"ko",
	"admin":true,
	"context":true,
	"widget":true,
	"templet":true,
	"configs":{
		"templet":{
			"type":"templet",
			"default":"default"
		},
		"author_label":{
			"type":"int",
			"default":0
		},
		"author_name":{
			"type":"string",
			"default":"nickname"
		},
		"author_photo":{
			"type":"boolean",
			"default":true
		}
	},
	"targets":{
		"member":{
			"afterGetContext":[
				"profile"
			]
		}
	},
	"databases":{
		"publication_attachment_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"첨부파일고유값"
				},
				"aidx":{
					"type":"int",
					"length":11,
					"comment":"첨부된 출판물고유값"
				}
			},
			"indexes":{
				"idx":"primary_key"
			},
			"comment":"출판물 첨부파일 테이블"
		},
		"publication_article_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"고유값"
				},
				"category":{
					"type":"int",
					"length":11,
					"comment":"카테고리고유값"
				},
				"title":{
					"type":"varchar",
					"length":255,
					"comment":"출판물명(논문명/책제목/기사제목 등)"
				},
				"publisher":{
					"type":"int",
					"length":11,
					"comment":"출판사(저널명/미디어명/컨퍼런스명 등)"
				},
				"year":{
					"type":"int",
					"length":11,
					"comment":"출판년도"
				},
				"volume_no":{
					"type":"int",
					"length":11,
					"comment":"권"
				},
				"issue_no":{
					"type":"int",
					"length":11,
					"comment":"호"
				},
				"page_no":{
					"type":"varchar",
					"length":20,
					"comment":"페이지번호"
				},
				"abstract":{
					"type":"text",
					"comment":"개요"
				},
				"keyword":{
					"type":"varchar",
					"length":255,
					"comment":"키워드"
				},
				"link":{
					"type":"varchar",
					"length":255,
					"comment":"링크주소"
				},
				"file":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"첨부파일"
				}
			},
			"indexes":{
				"idx":"primary_key"
			},
			"auto_increment":"idx",
			"comment":"출판물 출판내역 테이블"
		},
		"publication_author_table":{
			"columns":{
				"aidx":{
					"type":"int",
					"length":11,
					"comment":"출판물고유값"
				},
				"midx":{
					"type":"int",
					"length":11,
					"comment":"회원번호"
				},
				"name":{
					"type":"varchar",
					"length":50,
					"comment":"저자명"
				},
				"sort":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"정렬"
				}
			},
			"indexes":{
				"aidx,midx,name":"primary_key",
				"aidx":"index",
				"midx":"index"
			},
			"comment":"출판물 저자 테이블"
		},
		"publication_category_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"카테고리고유값"
				},
				"type":{
					"type":"enum",
					"length":"'PAPER','THESIS','PATENT','BOOK','CONFERENCE','MEDIA'",
					"default":"PAPER",
					"comment":"출판물종류"
				},
				"title":{
					"type":"varchar",
					"length":100,
					"comment":"카테고리명"
				},
				"sort":{
					"type":"int",
					"length":11,
					"comment":"정렬"
				}
			},
			"indexes":{
				"idx":"primary_key"
			},
			"auto_increment":"idx",
			"comment":"출판물 카테고리 테이블"
		},
		"publication_publisher_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"고유값"
				},
				"type":{
					"type":"enum",
					"length":"'PAPER','PATENT','BOOK','CONFERENCE','MEDIA'",
					"default":"PAPER",
					"comment":"출판물종류"
				},
				"title":{
					"type":"varchar",
					"length":100,
					"comment":"출판사명(저널명/컨퍼런스명/미디어명 등)"
				},
				"search":{
					"type":"varchar",
					"length":255,
					"comment":"검색필드"
				},
				"supervision":{
					"type":"varchar",
					"length":100,
					"is_null":true,
					"comment":"주최"
				},
				"country":{
					"type":"int",
					"length":11,
					"default":0,
					"comment":"개최국(컨퍼런스)"
				},
				"city":{
					"type":"varchar",
					"length":50,
					"is_null":true,
					"comment":"개최도시(컨퍼런스)"
				},
				"start_date":{
					"type":"date",
					"is_null":true,
					"comment":"시작일(컨퍼런스)"
				},
				"end_date":{
					"type":"date",
					"is_null":true,
					"comment":"종료일(컨퍼런스)"
				},
				"isbn":{
					"type":"varchar",
					"length":20,
					"default":"",
					"comment":"ISBN(도서)"
				},
				"link":{
					"type":"varchar",
					"length":255,
					"default":"",
					"comment":"링크주소"
				}
			},
			"indexes":{
				"idx":"primary_key",
				"type":"index",
				"search":"index"
			},
			"auto_increment":"idx",
			"comment":"출판물 출판사 테이블"
		}
	}
}